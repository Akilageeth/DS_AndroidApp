<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_color_light" >
    <include layout="@layout/header2"/>
    <include layout="@layout/top_orderbar" android:visibility="gone" />
   
    <LinearLayout
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@drawable/roundborder"
android:gravity="center"
android:orientation="horizontal" >

        <EditText
            android:id="@+id/search_dish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/noborder"
            android:ems="10"
            android:hint="Search Hotels"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="24sp">

            <requestFocus />
        </EditText>

        <ImageView
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/search_icon" />
</LinearLayout>

    <ListView
        android:id="@+id/dishesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>